extends layout

block rightBar
	//
		 Right Nav Section
	li.active
		a.medium.radius.button.navBtm(href='#') Add a Test
	li.divider.btnSpacer
	li.active
		a.medium.radius.button.navBtn(href='#', data-reveal-id='firstModal') View All Tests
	#firstModal.reveal-modal(data-reveal)
		.row
			.large-12.columns
				h2 View All Tests
		.row
			.large-12.columns
				ul.clearing-thumbs.small-block-grid-4(data-clearing='data-clearing')
					li
						a(href='img/folderpic.jpg')
							img(data-caption='File 1', src='img/folderpic.jpg')
					li
						a(href='img/folderpic.jpg')
							img(data-caption='File 2', src='img/folderpic.jpg')
					li
						a(href='img/folderpic.jpg')
							img(data-caption='File 3', src='img/folderpic.jpg')
		a.close-reveal-modal &times;

block pageContent
	.row.primary
		.large-12.columns
			center
				h1.title(style="font-family: 'Lobster', cursive; font-size:340%") Dashboard
		br
	.row
		.large-12.columns
			.panel
				.row
					.large-4.columns
						.callout.panel
					.large-4.columns
						.callout.panel
					.large-4.columns
						.callout.panel
	.row
		.large-12.columns
			form(action='/newtest' method='post' id = "newtestCreation")
				.panel
					.row
						.large-7.columns
							input(type = "text" placeholder="Test Name" name="testName")
						.large-3.columns
							input(type="datetime-local" name="datetimeTest" placeholder="Date of Test")
						.large-2.columns
							input(type = "text" placeholder = "Test Points" name="testPoints")
					.row
						.large-12.columns
							
					div(ng-repeat='question in questions'  class="question-block")
						.form-group
							.row
								.callout.panel
									.row
										.large-3.columns
											center
												h4 Question Type
											select(form='newtestCreation' name='questionType' class="question-type")
												option(value='mtpl') Multiple Choice
												option(value='shrt') Short Answer
												option(value='mtch') Matching
												option(value='othr') Other
											row
												.large-12.columns
													center
														input(id="checkbox1" name='randomnized' type='checkbox')
														label(for='random') Randomize?
												
												.row.collapse
													.small-5.columns
														span.prefix Worth
													.small-4.columns
														input(name='points' type='number', placeholder='')
													.small-3.columns
														span.postfix Pts.
										.large-1.columns
											br
										.large-8.columns
											center
												h4 Question Info
											.row
												.large-12.columns
													.row.collapse
														.small-2.columns
															span.prefix Question:
														.small-10.columns
															input.form-control.medform(name='question' type='text', placeholder='e.g. How big is China?', ng-model='item.text')
											.row
												.large-12.columns
													.row.collapse
														.small-2.columns
															br
															center
																h6 # Answer Choices
															select(form='newtestCreation' name='amtAnswers')
																option(value='2') 2
																option(value='3') 3
																option(value='4') 4
																option(value='5') 5
															center
																h6 Correct Answer
																	select(form='newtestCreation' name='correctAnswer')
																		div(ng-repeat='answer in answers')
																			.form-group
																				option(value='a') A
														.small-9.columns
															.row
																.large-12.columns
																	.row.collapse
																		.small-2.columns
																			span.prefix A:
																		.small-10.columns
																			input(type='text', name='answer', placeholder='Apple')
															.row
																.large-12.columns
																	.row.collapse
																		.small-2.columns
																			span.prefix B:
																		.small-10.columns
																			input(type='text',name='answer', placeholder='Banana')
															.row
																.large-12.columns
																	.row.collapse
																		.small-2.columns
																			span.prefix C:
																		.small-10.columns
																			input(type='text',name='answer',placeholder='Carrot')
															.row
																.large-12.columns
																	.row.collapse
																		.small-2.columns
																			span.prefix D:
																		.small-10.columns
																			input(type='text', placeholder='Daikon')
												h4(style='float:right;margin-top:-125px;margin-right:-25px;', align='right')
													font(color='F21111') x
										.large-2.columns
											a
												
											.row
												br
												br
												
						br
					.row
						.large-12.columns
							.center
								a.medium.radius.button(ng-click='newQuestion()') Add Question

					.row
						.large-12.columns
						input(name='submit' value='Submit' type='submit')
